@model HomeViewModel

@{
	ViewData["Title"] = "Home Page";
}

<partial name="_LoadingPartial" />
<div class="container chat-container" id="chat-body">

	

	<div class="container p-0">
	
		@if (Model.Conversation.Count > 0)
		{
			<div class="card conversation ">
				<div class="card-body px-3 pb-3 pt-0">
					@foreach (var item in Model.Conversation)
					{
						@if (item.IsHuman)
						{
							<div class="d-flex gap-2 flex-row mt-4 mx-1 mb-1">
								<strong >You:</strong>
								<div>@item.Text</div>   
							</div>
						}
						else
						{
							<div class="py-2 px-3 bg-light rounded">
								<strong> NYPTI-Q:</strong>
								<div>@item.Text</div>
							</div>
						}
					   
					}
				</div>
			</div>
		}
		else
		{
			<img src="./images/aipng.jpeg" class="img-fluid align-self-center" alt="Responsive image">

			<h2 class="text-center  font-weight-bold">I'm NYPTI Q , A Law Robot that answers questions about cases decided by NYS Courts</h2>
			<div class="row mt-3">
				<div class="col-sm-6 rounded btn " onclick="submitForm(1)">
					<div class="card " data-bs-toggle="tooltip" title="Click To Send">
						<div class="card-body row ">
							<h5 class="card-text col-sm-10">when was 2022 NY Slip Op 22419 decision held on ?</h5>
							<h4 class="bi bi-arrow-up-square col-sm-2"></h4>

						</div>
					</div>
				</div>
				<div class="col-sm-6 rounded btn" onclick="submitForm(2)">
					<div class="card" data-bs-toggle="tooltip" title="Click To Send">
						<div class="card-body row">
							<h5 class="card-text col-sm-10">
								who was Judge for  2022 NY Slip Op 22419 decision  ?

							</h5>
							<h4 class="bi bi-arrow-up-square col-sm-2"></h4>

						</div>
					</div>
				</div>
			</div>

		}

	</div>
	
	
	<div class="container fixed-bottom  search-container mb-3 mt-2">
		<form class="d-flex mb-4" role="search" id="searchForm" method="post">
			<input class="form-control me-2" type="search" asp-for="@Model.Prompt" placeholder="Ask  me question ?" aria-label="Search">
			<button class="btn chat-button" type="submit" onclick="displayBusyIndicator()">Search</button>
		</form>
		<h6 class="text-center">This is an experimental NYPTI AI project. You MUST check answers with independent research </h6>
	</div>
	<!-- can make mistakes. Consider checking important information -->
	

</div>




